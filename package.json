{
  "name": "codecov",
  "version": "0.1.0",
  "description": "Codecov Report Uploader",
  "private": true,
  "bin": "bin/codecov",
  "scripts": {
    "lint": "eslint src",
    "test": "jest",
    "prebuild": "rollup -c rollup.config.js",
    "build-linux": "nexe dist/codecov.js -t linux-x64-10.16.3 -o out/codecov-linux",
    "build-alpine": "nexe dist/codecov.js --build --configure '--partly-static' --configure '--enable-static' --t alpine-x64-10.16.0 -o out/codecov-alpine",
    "build-macos": "pkg . --targets 10.16.3-macos-x64 --output out/codecov-macos",
    "build-windows": "nexe dist/codecov.js -t win32-x64-10.16.0x -o out/codecov.exe"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codecov/uploader.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/codecov/uploader/issues"
  },
  "homepage": "https://github.com/codecov/uploader#readme",
  "dependencies": {
    "glob": "7.1.6",
    "line-reader": "0.4.0",
    "superagent": "5.2.2",
    "validator": "13.0.0",
    "yargs": "15.3.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "13.0.0",
    "@rollup/plugin-node-resolve": "8.1.0",
    "eslint": "7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "expect": "26.0.1",
    "jest": "^26.0.1",
    "nexe": "3.3.7",
    "nock": "^12.0.3",
    "pkg": "4.4.8",
    "prettier": "2.0.5",
    "rollup": "2.18.2",
    "testdouble": "3.13.1",
    "testdouble-jest": "2.0.0"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "text",
      "cobertura"
    ],
    "exclude": [
      "src/ci_providers/provider_template.js",
      "rollup.config.js",
      "test/**/*",
      "src/index.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "plugin:prettier/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "td:": "readonly",
      "expect": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {}
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/ci_providers/provider_template.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/test_helpers.js"
    ]
  }
}
