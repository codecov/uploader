{
  "name": "codecov",
  "version": "0.1.0",
  "description": "Codecov Report Uploader",
  "private": true,
  "bin": "bin/codecov",
  "scripts": {
    "test": "nyc mocha test/**/*.test.js",
    "build-linux": "pkg . --targets linux --output out/codecov-linux",
    "build-macos": "pkg . --targets macos --output out/codecov-macos",
    "build-windows": "pkg . --targets win --output out/codecov.exe"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codecov/uploader.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/codecov/uploader/issues"
  },
  "homepage": "https://github.com/codecov/uploader#readme",
  "dependencies": {
    "glob": "^7.1.6",
    "line-reader": "^0.4.0",
    "superagent": "5.2.1",
    "validator": "12.2.0",
    "yargs": "15.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-node-resolve": "7.1.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "mocha": "7.0.1",
    "nock": "11.7.2",
    "nyc": "15.0.0",
    "pkg": "4.4.3",
    "prettier": "1.19.1",
    "sinon": "8.1.1"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "text",
      "cobertura"
    ],
    "exclude": [
      "src/ci_providers/provider_template.js",
      "rollup.config.js",
      "test/**/*"
    ]
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "plugin:prettier/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {}
  },
  "mocha": {
    "timeout": 3000
  }
}
