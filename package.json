{
  "name": "codecov",
  "version": "0.1.0",
  "description": "Codecov Report Uploader",
  "private": true,
  "bin": "bin/codecov",
  "scripts": {
    "lint": "standard --fix",
    "test": "jest",
    "build-linux": "pkg . --targets linux --output out/codecov-linux",
    "build-macos": "pkg . --targets macos --output out/codecov-macos",
    "build-alpine": "pkg . --targets node14-alpine-x64 --output out/codecov-alpine",
    "build-windows": "pkg . --targets win --output out/codecov.exe"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codecov/uploader.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/codecov/uploader/issues"
  },
  "homepage": "https://github.com/codecov/uploader#readme",
  "dependencies": {
    "glob": "7.1.7",
    "line-reader": "0.4.0",
    "superagent": "6.1.0",
    "validator": "13.6.0",
    "yargs": "16.2.0"
  },
  "devDependencies": {
    "jest": "27.0.4",
    "mock-fs": "5.0.0",
    "nock": "13.1.0",
    "pkg": "5.1.0",
    "standard": "16.0.3",
    "testdouble": "3.16.1",
    "testdouble-jest": "2.0.0"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "text",
      "cobertura"
    ],
    "exclude": [
      "src/ci_providers/provider_template.js",
      "rollup.config.js",
      "test/**/*"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/ci_providers/provider_template.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/test_helpers.js"
    ]
  },
  "standard": {
    "globals": [
      "expect",
      "it",
      "describe",
      "beforeEach",
      "afterEach",
      "jest"
    ]
  }
}
