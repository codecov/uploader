{
  "name": "codecov",
  "version": "0.1.0",
  "description": "Codecov Report Uploader",
  "private": true,
  "bin": "bin/codecov",
  "scripts": {
    "test": "nyc mocha test/**/*.test.js",
    "prebuild": "rollup -c rollup.config.js",
    "build-linux": "nexe dist/codecov.js -t linux-x64-10.16.3 -o out/codecov --cwd .",
    "build-macos": "nexe dist/codecov.js -t mac-x64-10.16.3 -o out/codecov-macos",
    "build-windows": "nexe dist/codecov.js -t win32-x64-10.16.0x -o out/codecov.exe"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codecov/uploader.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/codecov/uploader/issues"
  },
  "homepage": "https://github.com/codecov/uploader#readme",
  "dependencies": {
    "superagent": "^5.2.1",
    "validator": "^12.1.0",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.0.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "mocha": "^7.0.1",
    "nexe": "^3.3.2",
    "nock": "^11.7.2",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "rollup": "^1.31.0",
    "sinon": "^8.1.1"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "text",
      "cobertura"
    ]
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "plugin:prettier/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {}
  }
}
