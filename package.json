{
  "name": "codecov",
  "version": "0.1.0",
  "description": "Codecov Report Uploader",
  "private": true,
  "bin": "bin/codecov",
  "scripts": {
    "lint": "eslint src",
    "test": "jest",
    "build-linux": "pkg . --targets linux --output out/codecov-linux",
    "build-macos": "pkg . --targets macos --output out/codecov-macos",
    "build-windows": "pkg . --targets win --output out/codecov.exe"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codecov/uploader.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/codecov/uploader/issues"
  },
  "homepage": "https://github.com/codecov/uploader#readme",
  "dependencies": {
    "glob": "^7.1.6",
    "line-reader": "^0.4.0",
    "superagent": "5.2.1",
    "validator": "12.2.0",
    "yargs": "^15.3.1"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "expect": "^26.0.1",
    "jest": "^25.1.0",
    "nock": "11.7.2",
    "pkg": "4.4.3",
    "prettier": "1.19.1",
    "testdouble": "^3.13.0",
    "testdouble-jest": "^2.0.0"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "text",
      "cobertura"
    ],
    "exclude": [
      "src/ci_providers/provider_template.js",
      "rollup.config.js",
      "test/**/*",
      "src/index.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": [
      "plugin:prettier/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "td:": "readonly",
      "expect": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "rules": {}
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js",
      "!src/ci_providers/provider_template.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/test_helpers.js"
    ]
  }
}
