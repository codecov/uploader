pkgname=ell
pkgver=0.31
pkgrel=0
pkgdesc="Linux library for embedded development"
url="https://01.org/ell"
arch="all"
license="GPL-2.0-only"
makedepends="glib-dev linux-headers"
checkdepends="dbus"
subpackages="$pkgname-dev"
source="https://mirrors.edge.kernel.org/pub/linux/libs/ell/ell-$pkgver.tar.gz"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-glib
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="7c5b70d0d2e11c6ae8e0b28a8c3a8332a0051677f96e86df5467a028b1e628ebace6a6d35ce1f7f8a013dedbf5f89c7d70994fb8153b0f6c0ff6e2b7e4d2927b  ell-0.31.tar.gz"
