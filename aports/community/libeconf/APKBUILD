# Maintainer: Leo <thinkabit.ukim@gmail.com>
pkgname=libeconf
pkgver=0.3.5
pkgrel=0
pkgdesc="Enhanced Config File Parser"
url="https://github.com/openSUSE/libeconf"
arch="all"
license="MIT"
subpackages="$pkgname-dev"
source="https://github.com/openSUSE/libeconf/releases/download/v$pkgver/libeconf-$pkgver.tar.xz"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--disable-static
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="18bb408185721c054695fa46b488e7e2226dc25a116a019bf3178233a9928cfd2711dce182793e7bbf235d69023bffc5c29897901c90d04bd066620505069900  libeconf-0.3.5.tar.xz"
