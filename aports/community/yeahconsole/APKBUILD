pkgname=yeahconsole
pkgver=0.3.4
pkgrel=1
pkgdesc="Drop-down X terminal emulator wrapper"
url="http://phrat.de/"
arch="all"
license="GPL-2.0-or-later"
options="!check" # No test suite
makedepends="libx11-dev"
source="http://phrat.de/yeahconsole-$pkgver.tar.gz
	makefile.patch
	restarthidden.patch
	x11.patch
	"

build() {
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

